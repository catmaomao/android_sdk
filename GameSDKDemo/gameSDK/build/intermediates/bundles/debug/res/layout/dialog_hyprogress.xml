<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/HY_GameSDK_590PX"
    android:layout_height="wrap_content"
    android:background="@color/hy_hybgColor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="@dimen/HY_GameSDK_590PX"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/HY_GameSDK_20PX"
        android:paddingLeft="@dimen/HY_GameSDK_30PX"
        android:paddingRight="@dimen/HY_GameSDK_30PX"
        android:paddingTop="@dimen/HY_GameSDK_20PX"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/title_logo" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/HY_GameSDK_10PX"
            android:layout_marginRight="@dimen/HY_GameSDK_10PX"
            android:layout_toRightOf="@+id/iv_logo"
            android:background="@color/hy_dark_black" />

        <TextView
            android:id="@+id/tv_loading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_line"
            android:text="@string/account_login"
            android:textColor="@color/hy_button_text"
            android:textSize="@dimen/HY_GameSDK_28PX" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/HY_GameSDK_10PX"
            android:paddingRight="@dimen/HY_GameSDK_10PX"
            android:src="@drawable/nav_icon_close"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        android:background="@color/hy_dark_black" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/HY_GameSDK_590PX"
        android:layout_height="@dimen/HY_GameSDK_180PX"
        android:background="@color/hy_hybgColor"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/loadingImageView"
            android:layout_width="@dimen/HY_GameSDK_80PX"
            android:layout_height="@dimen/HY_GameSDK_80PX"
            android:layout_marginLeft="@dimen/HY_GameSDK_80PX"
            android:background="@anim/progress_round" />

        <TextView
            android:id="@+id/tv_loadingmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@color/hy_hybgColor"
            android:gravity="center_vertical"
            android:textColor="@color/hy_button_text"
            android:textSize="@dimen/HY_GameSDK_28PX" />
    </LinearLayout>

</LinearLayout>