<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/hy_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/hy_msg_detail_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/HY_GameSDK_28PX" >

        <RelativeLayout
            android:id="@+id/hy_msg_detail_item_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/relativeLayout2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_msg_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/HY_GameSDK_20PX"
                    android:maxLength="10"
                    android:text="@string/hy_text_hygame_pay"
                    android:textColor="@color/hy_dark_black"
                    android:textSize="@dimen/HY_GameSDK_26PX" />

                <TextView
                    android:id="@+id/item_msg_content_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_msg_title_txt"
                    android:layout_marginTop="@dimen/HY_GameSDK_10PX"
                    android:maxEms="17"
                    android:maxLines="2"
                    android:text="@string/hy_text_hygame_pay"
                    android:textColor="@color/hy_content_gray"
                    android:textSize="@dimen/HY_GameSDK_22PX" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:padding="@dimen/HY_GameSDK_20PX" >

                <TextView
                    android:id="@+id/item_msg_bt"
                    android:layout_width="@dimen/HY_GameSDK_150PX"
                    android:layout_height="@dimen/HY_GameSDK_50PX"
                    android:background="#1ca8e0"
                    android:gravity="center"
                    android:text="@string/hy_no_data"
                    android:textColor="@color/hy_white"
                    android:textSize="@dimen/HY_GameSDK_26PX" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hy_msg_detail_item_layout_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_msg_pull_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hy_pay_detail_item_arrow_down" />

            <TextView
                android:id="@+id/item_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/HY_GameSDK_20PX"
                android:text="@string/hy_text_time"
                android:textColor="#999999"
                android:textSize="@dimen/HY_GameSDK_22PX" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentTop="true"
        android:background="#bcbcbc" />

</LinearLayout>