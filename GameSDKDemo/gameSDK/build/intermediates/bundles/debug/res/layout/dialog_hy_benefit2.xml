<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/HY_GameSDK_600PX"
        android:layout_height="wrap_content"
        android:background="@color/hy_white"
        android:minHeight="@dimen/HY_GameSDK_474PX"
        android:orientation="vertical"
        android:paddingLeft="@dimen/HY_GameSDK_28PX"
        android:paddingRight="@dimen/HY_GameSDK_28PX" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_88PX"
            android:background="@color/hy_white" >

            <LinearLayout
                android:id="@+id/hy_icon_logo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/HY_GameSDK_88PX"
                    android:layout_height="@dimen/HY_GameSDK_44PX"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/dialog_hy_benefit_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/HY_GameSDK_28PX"
                android:layout_toRightOf="@id/hy_icon_logo"
                android:gravity="center_vertical"
                android:text="@string/hy_no_data"
                android:textColor="@color/hy_text_title"
                android:textSize="@dimen/HY_GameSDK_32PX" />

            <ImageView
                android:id="@+id/hy_benefit_back"
                android:layout_width="@dimen/HY_GameSDK_50PX"
                android:layout_height="@dimen/HY_GameSDK_50PX"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/HY_GameSDK_24PX"
                android:background="@drawable/hy_ed_clear"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/hy_title_line" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_400PX"
            android:paddingBottom="@dimen/HY_GameSDK_20PX"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/dialog_hy_benefit_code_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/HY_GameSDK_80PX"
                    android:layout_marginTop="@dimen/HY_GameSDK_40PX"
                    android:background="#f2f2f2"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/dialog_hy_benefit_code_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/HY_GameSDK_16PX"
                        android:text="@string/hy_no_data"
                        android:textColor="@color/hy_TextColorBlack"
                        android:textSize="@dimen/HY_GameSDK_26PX" />

                    <ImageView
                        android:id="@+id/dialog_hy_benefit_copy_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/HY_GameSDK_16PX"
                        android:background="@drawable/hy_btn_code_selector" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dialog_hy_benefit_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/HY_GameSDK_40PX"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/dialog_hy_benefit_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hy_no_data"
                        android:textColor="#1ca8e0"
                        android:textSize="@dimen/HY_GameSDK_28PX" />

                    <TextView
                        android:id="@+id/dialog_hy_benefit_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dialog_hy_benefit_sub_title"
                        android:layout_marginTop="@dimen/HY_GameSDK_20PX"
                        android:lineSpacingExtra="@dimen/HY_GameSDK_6PX"
                        android:text="@string/hy_no_data"
                        android:textColor="#555555"
                        android:textSize="@dimen/HY_GameSDK_24PX" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>