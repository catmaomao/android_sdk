<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nanlus="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="300dp"
    android:background="@color/hy_hybgColor"
    android:orientation="vertical" >

    <include layout="@layout/hy_title_include" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/hy_title_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/hy_tv_error_include" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/HY_GameSDK_280PX"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/HY_GameSDK_20PX"
                android:layout_marginTop="@dimen/HY_GameSDK_8PX" >

                <com.heyijoy.gamesdk.widget.EditTextWithErr
                    android:id="@+id/et_verify_no"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/HY_GameSDK_16PX"
                    android:contentDescription="@string/hy_text_hint_verify"
                    android:tag="verifyno#6" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_re_send"
                android:layout_width="@dimen/HY_GameSDK_200PX"
                android:layout_height="@dimen/HY_GameSDK_88PX"
                android:background="@drawable/hy_btn_blue_gray_selector"
                android:gravity="center"
                android:textColor="@color/hy_btn_text_gray"
                android:textSize="@dimen/HY_GameSDK_32PX" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/HY_GameSDK_88PX"
            android:layout_marginBottom="@dimen/HY_GameSDK_50PX"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:layout_marginTop="@dimen/HY_GameSDK_46PX"
            android:background="@drawable/hy_btn_blue_selector"
            android:text="@string/hy_text_btn_login_in"
            android:textColor="@color/hy_btn_text_white"
            android:textSize="@dimen/HY_GameSDK_32PX" />
    </LinearLayout>

</LinearLayout>