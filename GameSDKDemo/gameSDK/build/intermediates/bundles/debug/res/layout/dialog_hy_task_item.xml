<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/hy_white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/HY_GameSDK_2PX"
        android:layout_alignParentTop="true"
        android:background="#bcbcbc" />

    <RelativeLayout
        android:id="@+id/hy_pay_detail_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/HY_GameSDK_119PX"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/HY_GameSDK_28PX"
        android:paddingRight="@dimen/HY_GameSDK_20PX"
         >

        <TextView
            android:id="@+id/item_task_txt"
            android:layout_width="@dimen/HY_GameSDK_451PX"
            android:layout_height="wrap_content"
            android:text="@string/hy_text_hygame_pay"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="@dimen/HY_GameSDK_26PX" />

        <ImageView
            android:id="@+id/item_status_img"
            android:layout_width="@dimen/HY_GameSDK_88PX"
            android:layout_height="@dimen/HY_GameSDK_20PX"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/hy_btn_task_unfinished" />
    </RelativeLayout>

</LinearLayout>