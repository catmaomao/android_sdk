<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nanlus="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="wrap_content"
    android:background="@color/hy_hybgColor"
    android:orientation="vertical" >

    <include layout="@layout/hy_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/HY_GameSDK_200PX"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_bing_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/HY_GameSDK_110PX"
                android:layout_height="@dimen/HY_GameSDK_110PX"
                android:src="@drawable/share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:visibility="gone"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_28PX" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bing_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/HY_GameSDK_110PX"
                android:layout_height="@dimen/HY_GameSDK_110PX"
                android:src="@drawable/share_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:visibility="gone"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_28PX" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bing_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/HY_GameSDK_110PX"
                android:layout_height="@dimen/HY_GameSDK_110PX"
                android:src="@drawable/share_sina" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:visibility="gone"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_28PX" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>