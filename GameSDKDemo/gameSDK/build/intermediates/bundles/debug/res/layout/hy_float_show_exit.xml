<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/HY_GameSDK_565PX"
        android:layout_height="fill_parent"
        android:background="@color/hy_hybgColor"
        android:orientation="vertical" >

        <include layout="@layout/hy_title" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/HY_GameSDK_200PX"
            android:background="@color/hy_hybgColor"
            android:paddingLeft="@dimen/HY_GameSDK_44PX"
            android:paddingRight="@dimen/HY_GameSDK_44PX" >

            <TextView
                android:id="@+id/hy_dialog_show_exit_content_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/hy_loading_btn_cancel"
                android:textSize="@dimen/HY_GameSDK_26PX" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/hy_button_text" >
        </TextView>

        <LinearLayout
            android:layout_width="@dimen/HY_GameSDK_565PX"
            android:layout_height="@dimen/HY_GameSDK_94PX"
            android:background="#FFFFFFFF"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/hy_btn_text_white"
                android:text="@string/hy_text_btn_qx"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_28PX" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/hy_button_text" >
            </TextView>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/hy_btn_text_white"
                android:text="@string/hy_text_btn_gx"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_28PX" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>