<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nanlus="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="300dp"
    android:background="@color/hy_hybgColor"
    android:orientation="vertical" >

    <include layout="@layout/hy_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/hy_tv_error_include" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:layout_marginTop="@dimen/HY_GameSDK_32PX"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="@dimen/HY_GameSDK_280PX"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/HY_GameSDK_20PX"
                android:layout_marginTop="@dimen/HY_GameSDK_8PX"
                android:background="@color/color_trans"
                android:hint="@string/hy_text_hint_qsrsjh"
                android:inputType="phone"
                android:textColor="@color/hy_button_text"
                android:textColorHint="@color/hy_light_gray"
                android:textSize="@dimen/HY_GameSDK_26PX" />

            <Button
                android:id="@+id/btn_re_send"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/HY_GameSDK_50PX"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/code_shape"
                android:textColor="@color/hy_btn_text_yellow"
                android:textSize="@dimen/HY_GameSDK_28PX" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:layout_marginTop="@dimen/HY_GameSDK_14PX"
            android:background="@color/hy_light_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_verify_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:layout_marginTop="@dimen/HY_GameSDK_36PX"
            android:background="@color/color_trans"
            android:hint="@string/hy_text_hint_qsrdxyzm"
            android:inputType="number"
            android:textColor="@color/hy_button_text"
            android:textColorHint="@color/hy_light_gray"
            android:textSize="@dimen/HY_GameSDK_26PX" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:layout_marginTop="@dimen/HY_GameSDK_14PX"
            android:background="@color/hy_light_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/HY_GameSDK_32PX"
        android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
        android:layout_marginRight="@dimen/HY_GameSDK_36PX"
        android:layout_marginTop="@dimen/HY_GameSDK_32PX"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_binding"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/HY_GameSDK_70PX"
            android:background="@color/hy_btn_text_yellow"
            android:text="@string/hy_btn_text_wcbj"
            android:textColor="@color/hy_btn_text_white"
            android:textSize="@dimen/HY_GameSDK_32PX" />

    </LinearLayout>

</LinearLayout>