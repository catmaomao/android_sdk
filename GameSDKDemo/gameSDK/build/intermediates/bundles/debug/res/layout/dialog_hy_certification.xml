<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:nanlus="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="wrap_content"
    android:background="@color/hy_hybgColor"
    android:orientation="vertical" >

    <include layout="@layout/hy_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/hy_title_line" >
    </LinearLayout>

    <include layout="@layout/hy_tv_error_include" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/HY_GameSDK_300PX" >

        <LinearLayout
            android:id="@+id/ll_certification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
                android:layout_marginRight="@dimen/HY_GameSDK_36PX"
                android:layout_marginTop="@dimen/HY_GameSDK_26PX"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/HY_GameSDK_10PX"
                    android:text="真实姓名："
                    android:textColor="@color/hy_button_text"
                    android:textSize="@dimen/HY_GameSDK_26PX" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_trans"
                    android:hint="请输入真实姓名"
                    android:singleLine="true"
                    android:textColor="@color/hy_button_text"
                    android:textColorHint="@color/hy_light_gray"
                    android:textSize="@dimen/HY_GameSDK_26PX" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/HY_GameSDK_22PX"
                android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
                android:layout_marginRight="@dimen/HY_GameSDK_36PX"
                android:layout_marginTop="@dimen/HY_GameSDK_22PX"
                android:background="@color/hy_light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
                android:layout_marginRight="@dimen/HY_GameSDK_36PX"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/HY_GameSDK_10PX"
                    android:text="身份证号："
                    android:textColor="@color/hy_button_text"
                    android:textSize="@dimen/HY_GameSDK_26PX" />

                <EditText
                    android:id="@+id/et_new_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_trans"
                    android:hint="请输入真实身份证号"
                    android:singleLine="true"
                    android:textColor="@color/hy_button_text"
                    android:textColorHint="@color/hy_light_gray"
                    android:textSize="@dimen/HY_GameSDK_26PX" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
                android:layout_marginRight="@dimen/HY_GameSDK_36PX"
                android:layout_marginTop="@dimen/HY_GameSDK_18PX"
                android:background="@color/hy_light_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
                android:layout_marginRight="@dimen/HY_GameSDK_36PX"
                android:layout_marginTop="@dimen/HY_GameSDK_32PX"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/tv_sure_modify"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/HY_GameSDK_70PX"
                    android:background="@color/hy_btn_text_yellow"
                    android:text="@string/hy_done"
                    android:textColor="@color/hy_btn_text_white"
                    android:textSize="@dimen/HY_GameSDK_32PX" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_certification_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/done" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/HY_GameSDK_12PX"
                android:gravity="center"
                android:text="恭喜你完成实名认证"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_36PX" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>