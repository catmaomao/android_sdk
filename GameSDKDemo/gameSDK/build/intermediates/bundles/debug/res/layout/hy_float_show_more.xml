<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/HY_GameSDK_565PX"
        android:layout_height="fill_parent"
        android:background="@color/hy_hybgColor"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/HY_GameSDK_100PX"
            android:background="@color/hy_hybgColor" >

            <TextView
                android:id="@+id/hy_dialog_show_exit_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/hy_text_version_title"
                android:textColor="@color/hy_text_title"
                android:textSize="@dimen/HY_GameSDK_32PX" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hy_title_line" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/HY_GameSDK_200PX"
            android:background="@color/hy_hybgColor"
            android:paddingLeft="@dimen/HY_GameSDK_44PX"
            android:paddingRight="@dimen/HY_GameSDK_44PX" >

            <TextView
                android:id="@+id/hy_dialog_show_exit_content_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/hy_loading_btn_cancel"
                android:textSize="@dimen/HY_GameSDK_26PX" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/hy_title_line_bellow" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/HY_GameSDK_565PX"
            android:layout_height="@dimen/HY_GameSDK_94PX"
            android:background="#FFFFFFFF"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/hy_btn_white_selector"
                android:text="@string/hy_text_btn_qx"
                android:textColor="@color/hy_loading_btn_cancel"
                android:textSize="@dimen/HY_GameSDK_32PX" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/hy_title_line_bellow" >
            </LinearLayout>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/hy_btn_light_blue_selector"
                android:text="@string/hy_text_btn_gx"
                android:textColor="@color/hy_loading_btn_cancel"
                android:textSize="@dimen/HY_GameSDK_32PX" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>