<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nanlus="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="wrap_content"
    android:background="@color/hy_hybgColor"
    android:orientation="vertical" >

    <include layout="@layout/hy_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/hy_tv_error_include" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:layout_marginTop="@dimen/HY_GameSDK_26PX"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/HY_GameSDK_20PX"
                android:src="@drawable/nav_btn_figure" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/color_trans"
                android:gravity="center_vertical"
                android:hint="@string/hy_text_hint_user_name"
                android:singleLine="true"
                android:textColor="@color/hy_button_text"
                android:textColorHint="@color/hy_light_gray"
                android:textSize="@dimen/HY_GameSDK_26PX" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/HY_GameSDK_18PX"
        android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
        android:layout_marginRight="@dimen/HY_GameSDK_36PX"
        android:layout_marginTop="@dimen/HY_GameSDK_18PX"
        android:background="@color/hy_light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
        android:layout_marginRight="@dimen/HY_GameSDK_36PX"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/HY_GameSDK_20PX"
            android:src="@drawable/nav_btn_code" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_trans"
            android:gravity="center_vertical"
            android:hint="@string/hy_text_hint_csmm_reg"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/hy_button_text"
            android:textColorHint="@color/hy_light_gray"
            android:textSize="@dimen/HY_GameSDK_26PX" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/HY_GameSDK_36PX"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reg_tv_hink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/hy_text_a_zcxy"
            android:textColor="@drawable/hy_tv_hink_protocol_selector"
            android:textSize="@dimen/HY_GameSDK_18PX"
            android:visibility="gone" />
        <!-- hy_text_a_zcxy -->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
        android:layout_marginRight="@dimen/HY_GameSDK_36PX"
        android:layout_marginTop="@dimen/HY_GameSDK_16PX"
        android:background="@color/hy_hybgColor"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_70PX"
            android:background="@color/hy_btn_text_yellow"
            android:text="@string/hy_text_btn_done"
            android:textColor="@color/hy_btn_text_white"
            android:textSize="@dimen/HY_GameSDK_30PX" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_70PX" >

            <CheckBox
                android:id="@+id/cb_protocol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/shape_protocol"
                android:gravity="center_vertical"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_26PX"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/HY_GameSDK_10PX"
                android:layout_toRightOf="@+id/cb_protocol"
                android:background="@color/color_trans"
                android:gravity="center_vertical"
                android:text="用户协议"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_26PX"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/tv_phone_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_trans"
                android:gravity="center_vertical"
                android:text="手机注册"
                android:visibility="gone"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_26PX" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/color_trans"
                android:gravity="center_vertical"
                android:text="@string/hy_text_btn_hy_user_login"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_26PX" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>