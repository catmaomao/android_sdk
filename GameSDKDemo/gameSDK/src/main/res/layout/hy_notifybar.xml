<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hy_notify_icon"
        android:layout_width="@dimen/HY_GameSDK_100PX"
        android:layout_height="@dimen/HY_GameSDK_100PX"
        android:layout_marginLeft="@dimen/HY_GameSDK_14PX"
        android:layout_centerVertical="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hy_notify_icon"
        android:layout_marginLeft="@dimen/HY_GameSDK_22PX"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hy_notify_title"
            style="@style/HYNotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="title"
            android:textSize="15sp"
            android:textColor="@color/hy_white"
            android:singleLine="true"
            android:maxEms="9"/>

        <TextView
            android:id="@+id/hy_notify_content"
            style="@style/HYNotificationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/hy_notify_title"
            android:text="content"
            android:textSize="12sp"
            android:textColor="#a3a4a4"
            android:maxEms="16"
            android:maxLength="30"/>
    </RelativeLayout>

</RelativeLayout>