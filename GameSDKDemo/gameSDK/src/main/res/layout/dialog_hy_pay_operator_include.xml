<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/hy_pay_operator_content_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/hy_pay_operator_logo_linear"
            android:layout_width="@dimen/HY_GameSDK_427PX"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/hy_pay_logo_chinamobile_layout"
                android:layout_width="@dimen/HY_GameSDK_138PX"
                android:layout_height="@dimen/HY_GameSDK_58PX"
                android:layout_marginRight="@dimen/HY_GameSDK_7PX"
                android:background="@drawable/hy_pay_operator_unselected"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/hy_pay_logo_chinamobile_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hy_pay_logo_chinamobile" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hy_pay_logo_chinaunicom_layout"
                android:layout_width="@dimen/HY_GameSDK_138PX"
                android:layout_height="@dimen/HY_GameSDK_58PX"
                android:layout_marginRight="@dimen/HY_GameSDK_7PX"
                android:background="@drawable/hy_pay_operator_unselected"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/hy_pay_logo_chinaunicom_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hy_pay_logo_chinaunicom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hy_pay_logo_chinatelecom_layout"
                android:layout_width="@dimen/HY_GameSDK_138PX"
                android:layout_height="@dimen/HY_GameSDK_58PX"
                android:background="@drawable/hy_pay_operator_unselected"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/hy_pay_logo_chinatelecom_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hy_pay_logo_chinatelecom" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/hy_pay_operator_tip_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/HY_GameSDK_7PX"
            android:text="@string/hy_text_prompt_yd_lt_hyt"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/HY_GameSDK_20PX" />

        <RelativeLayout
            android:id="@+id/hy_pay_operator_amount_spinner_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hy_pay_operator_amount_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/hy_pay_operator_amount_spinner"
                android:text="@string/hy_text_mzyuan"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/HY_GameSDK_26PX" />

             
            <Spinner
                android:id="@+id/hy_pay_operator_amount_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hy_pay_operator_amount_tip"
                android:background="@drawable/hy_spinner_bg"
                android:gravity="bottom"
                android:paddingLeft="@dimen/HY_GameSDK_10PX"
                android:paddingBottom="@dimen/HY_GameSDK_5PX" />
        </RelativeLayout>

        <EditText
            android:id="@+id/hy_pay_operator_cardnum_edt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/hy_text_hint_card_no"
            android:inputType="number"
            android:maxLength="20"
            android:paddingLeft="@dimen/HY_GameSDK_10PX"
            android:paddingTop="@dimen/HY_GameSDK_26PX"
            android:singleLine="true"
            android:textColor="@color/hy_color_pay_vip_text2"
            android:textCursorDrawable="@drawable/hy_dialog_yt_cursor"
            android:textColorHint="@color/hy_edit_text_hint"
            android:textSize="@dimen/HY_GameSDK_26PX" />

        <include layout="@layout/hy_edt_line_include" />

        <EditText
            android:id="@+id/hy_pay_operator_cardkey_edt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/hy_text_hint_pwd"
            android:inputType="number"
            android:maxLength="20"
            android:paddingLeft="@dimen/HY_GameSDK_10PX"
            android:paddingTop="@dimen/HY_GameSDK_26PX"
            android:singleLine="true"
            android:textColor="@color/hy_color_pay_vip_text2"
            android:textCursorDrawable="@drawable/hy_dialog_yt_cursor"
            android:textColorHint="@color/hy_edit_text_hint"
            android:textSize="@dimen/HY_GameSDK_26PX" />

        <include layout="@layout/hy_edt_line_include" />
    </LinearLayout>

</LinearLayout>