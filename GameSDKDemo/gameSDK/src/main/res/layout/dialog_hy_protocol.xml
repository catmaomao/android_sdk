<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/HY_GameSDK_565PX"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/HY_GameSDK_16PX"
        android:paddingBottom="@dimen/HY_GameSDK_16PX"
        android:gravity="center"
        android:text="用户协议"
        android:textColor="@color/hy_button_text"
        android:textSize="@dimen/HY_GameSDK_32PX" />

    <WebView
        android:id="@+id/webview_protocol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/HY_GameSDK_400PX"
        android:background="#bdbdbd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/HY_GameSDK_10PX"
        android:layout_marginTop="@dimen/HY_GameSDK_10PX"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ce1d1d"
            android:gravity="center"
            android:paddingBottom="@dimen/HY_GameSDK_16PX"
            android:paddingLeft="@dimen/HY_GameSDK_80PX"
            android:paddingRight="@dimen/HY_GameSDK_80PX"
            android:paddingTop="@dimen/HY_GameSDK_16PX"
            android:text="拒绝"
            android:visibility="gone"
            android:textColor="@color/hy_btn_text_white"
            android:textSize="@dimen/HY_GameSDK_32PX" />

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#45baa0"
            android:gravity="center"
            android:paddingBottom="@dimen/HY_GameSDK_16PX"
            android:paddingLeft="@dimen/HY_GameSDK_110PX"
            android:paddingRight="@dimen/HY_GameSDK_110PX"
            android:paddingTop="@dimen/HY_GameSDK_16PX"
            android:text="取消"
            android:textColor="@color/hy_btn_text_white"
            android:textSize="@dimen/HY_GameSDK_32PX" />
    </LinearLayout>

</LinearLayout>