<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/HY_GameSDK_600PX"
        android:layout_height="wrap_content"
        android:background="@color/hy_white"
        android:minHeight="@dimen/HY_GameSDK_474PX"
        android:orientation="vertical"
        android:paddingLeft="@dimen/HY_GameSDK_28PX"
        android:paddingRight="@dimen/HY_GameSDK_28PX" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_88PX"
            android:background="@color/hy_white" >

            <LinearLayout
                android:id="@+id/hy_icon_logo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/HY_GameSDK_88PX"
                    android:layout_height="@dimen/HY_GameSDK_44PX"
                    android:layout_gravity="center_vertical"
                 />
            </LinearLayout>

            <TextView
                android:id="@+id/dialog_hy_benefit_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/HY_GameSDK_28PX"
                android:layout_toRightOf="@id/hy_icon_logo"
                android:gravity="center_vertical"
                android:text="@string/hy_no_data"
                android:textColor="@color/hy_text_title"
                android:textSize="@dimen/HY_GameSDK_32PX" />

            <ImageView
                android:id="@+id/hy_benefit_back"
                android:layout_width="@dimen/HY_GameSDK_50PX"
                android:layout_height="@dimen/HY_GameSDK_50PX"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/HY_GameSDK_24PX"
                android:background="@drawable/hy_ed_clear"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_N1PX"
            android:background="@color/hy_title_line2" />

        <LinearLayout
            android:id="@+id/dialog_yt_vip_ll_switch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_325PX"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/dialog_yt_iv"
                android:layout_width="@dimen/HY_GameSDK_110PX"
                android:layout_height="@dimen/HY_GameSDK_88PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/HY_GameSDK_36PX"
                android:layout_marginTop="@dimen/HY_GameSDK_22PX"
                android:src="@drawable/hy_dialog_yt_iv_big" />

            <TextView
                android:id="@+id/dialog_yt_tv"
                android:layout_width="@dimen/HY_GameSDK_496PX"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hy_dialog_yt_tv_big"
                android:maxLines="3"
                android:paddingBottom="@dimen/HY_GameSDK_5PX"
                android:paddingLeft="@dimen/HY_GameSDK_10PX"
                android:paddingRight="@dimen/HY_GameSDK_10PX"
                android:paddingTop="@dimen/HY_GameSDK_30PX"
                android:text="@string/hy_no_data"
                android:textColor="@color/hy_textcolor_benefit_orange"
                android:textSize="@dimen/HY_GameSDK_22PX" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>