<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="@dimen/HY_GameSDK_580PX"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/HY_GameSDK_5PX" >

        <RelativeLayout
            android:layout_width="@dimen/HY_GameSDK_580PX"
            android:layout_height="@dimen/HY_GameSDK_474PX"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/HY_GameSDK_60PX"
            android:background="@drawable/hy_announcement_bg" >

            <TextView
                android:id="@+id/item_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/HY_GameSDK_70PX"
                android:maxLines="1"
                android:textColor="#A17D4B"
                android:textSize="@dimen/HY_GameSDK_35PX" />

            <TextView
                android:id="@+id/item_content_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/HY_GameSDK_200PX"
                android:layout_below="@id/item_title_txt"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/HY_GameSDK_15PX"
                android:layout_marginRight="@dimen/HY_GameSDK_15PX"
                android:layout_marginTop="@dimen/HY_GameSDK_20PX"
                android:background="@drawable/hy_announcement_content"
                android:lineSpacingExtra="@dimen/HY_GameSDK_3PX"
                android:padding="@dimen/HY_GameSDK_20PX"
                android:singleLine="false"
                android:textColor="#A17D4B"
                android:textSize="@dimen/HY_GameSDK_28PX" />

            <TextView
                android:id="@+id/item_url_txt"
                android:layout_width="@dimen/HY_GameSDK_400PX"
                android:layout_height="@dimen/HY_GameSDK_70PX"
                android:layout_below="@id/item_content_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/HY_GameSDK_30PX"
                android:layout_marginTop="@dimen/HY_GameSDK_30PX"
                android:background="@drawable/hy_announcement_button" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/hy_icon_title"
            android:layout_width="@dimen/HY_GameSDK_496PX"
            android:layout_height="@dimen/HY_GameSDK_100PX"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hy_announcement_title" />

        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/HY_GameSDK_44PX"
            android:layout_height="@dimen/HY_GameSDK_44PX"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/HY_GameSDK_10PX"
            android:layout_marginTop="@dimen/HY_GameSDK_40PX"
            android:background="@drawable/hy_announcement_cancel" />
    </RelativeLayout>

</RelativeLayout>