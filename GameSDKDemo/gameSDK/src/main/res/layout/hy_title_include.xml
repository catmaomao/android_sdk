<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="@dimen/HY_GameSDK_100PX"
    android:layout_marginLeft="@dimen/HY_GameSDK_20PX"
    android:layout_marginRight="@dimen/HY_GameSDK_20PX"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lv_img"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/hy_icon_title"
            android:layout_width="@dimen/HY_GameSDK_88PX"
            android:layout_height="@dimen/HY_GameSDK_44PX"
            android:layout_gravity="center_vertical"
           />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/HY_GameSDK_20PX"
        android:layout_toRightOf="@id/lv_img"
        android:gravity="center_vertical"
        android:text="@string/hy_text_hyyx_user_title"
        android:textColor="@color/hy_text_title"
        android:textSize="@dimen/HY_GameSDK_30PX" />

    <Button
        android:id="@+id/back"	
        android:layout_width="@dimen/HY_GameSDK_80PX"
        android:layout_height="@dimen/HY_GameSDK_40PX"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/HY_GameSDK_12PX"
        android:layout_marginTop="@dimen/HY_GameSDK_24PX"
        android:background="@drawable/hy_btn_title_back_selector"
        android:gravity="center_vertical"
        android:visibility="invisible" />

</RelativeLayout>