<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    >

    <LinearLayout
        android:id="@+id/hy_pay_orderlist_layout"
        android:layout_width="@dimen/HY_GameSDK_600PX"
        android:layout_height="@dimen/HY_GameSDK_496PX"
        android:background="@color/hy_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_88PX"
            android:background="@color/hy_white"
            >
            
            <LinearLayout
                android:id="@+id/hy_icon_logo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/HY_GameSDK_88PX"
                    android:layout_height="@dimen/HY_GameSDK_44PX"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/HY_GameSDK_10PX"
                    />
            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/HY_GameSDK_20PX"
                android:layout_toRightOf="@id/hy_icon_logo"
                android:gravity="center_vertical"
                android:textColor="@color/hy_text_title"
                android:textSize="@dimen/HY_GameSDK_30PX" 
                android:text="@string/hy_text_viplist_title"/>

            <ImageView
                android:id="@+id/hy_vip_back"
                android:layout_width="@dimen/HY_GameSDK_50PX"
                android:layout_height="@dimen/HY_GameSDK_50PX"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/HY_GameSDK_12PX"
                android:layout_marginTop="@dimen/HY_GameSDK_24PX"
                android:background="@drawable/hy_ed_clear"
                android:gravity="center_vertical"
                android:visibility="visible" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hy_title_line" />

    <com.heyijoy.gamesdk.orderlist.AutoListView
        android:id="@+id/auto_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:fadingEdge="none"
        android:scrollingCache="false" />
    </LinearLayout>

</LinearLayout>