<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="wrap_content"
    android:background="@color/hy_hybgColor"
    android:paddingBottom="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/HY_GameSDK_552PX"
        android:layout_height="@dimen/HY_GameSDK_100PX"
        android:layout_marginLeft="@dimen/HY_GameSDK_20PX"
        android:layout_marginRight="@dimen/HY_GameSDK_20PX"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lv_img"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/hy_icon_title"
                android:layout_width="@dimen/HY_GameSDK_88PX"
                android:layout_height="@dimen/HY_GameSDK_44PX"
                android:layout_gravity="center_vertical"
          />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/hy_text_hyyx_user_title"
            android:textColor="@color/hy_TextColorBlack"
            android:textSize="@dimen/HY_GameSDK_32PX" />

        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/HY_GameSDK_44PX"
            android:layout_height="@dimen/HY_GameSDK_44PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/HY_GameSDK_10PX"
            android:layout_marginTop="@dimen/HY_GameSDK_24PX"
            android:background="@drawable/hy_btn_announcement_title_back_selector"
            android:padding="3dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/hy_title_line" >
    </LinearLayout>

    
    
    
    <TextView
        android:id="@+id/item_title_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/HY_GameSDK_24PX"
        android:layout_marginRight="@dimen/HY_GameSDK_24PX"
        android:layout_marginTop="1dp"
        android:textColor="#3db5f3"
        android:textSize="@dimen/HY_GameSDK_32PX" />

    <TextView
        android:id="@+id/item_content_txt"
        android:layout_width="@dimen/HY_GameSDK_552PX"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/HY_GameSDK_16PX"
        android:paddingRight="@dimen/HY_GameSDK_16PX"
        android:lineSpacingExtra="3dp"
        android:textColor="#636363"
        android:singleLine="false"
        android:maxLines="11"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/HY_GameSDK_28PX" />
        

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/item_url_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/HY_GameSDK_24PX"
            android:layout_marginRight="@dimen/HY_GameSDK_24PX"
            android:layout_marginTop="1dp"
            android:textColor="#3db5f3"
            android:textSize="@dimen/HY_GameSDK_28PX" />
    </RelativeLayout>

</LinearLayout>