<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/HY_GameSDK_552PX"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/HY_GameSDK_552PX"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/HY_GameSDK_20PX"
        android:paddingLeft="@dimen/HY_GameSDK_30PX"
        android:paddingRight="@dimen/HY_GameSDK_30PX"
        android:paddingTop="@dimen/HY_GameSDK_20PX" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/title_logo" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/HY_GameSDK_10PX"
            android:layout_marginRight="@dimen/HY_GameSDK_10PX"
            android:layout_toRightOf="@+id/iv_logo"
            android:background="@color/hy_dark_black" />

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_line"
            android:text="@string/account_login"
            android:textColor="@color/hy_button_text"
            android:textSize="@dimen/HY_GameSDK_28PX" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/HY_GameSDK_10PX"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:src="@drawable/nav_icon_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/hy_vedio_setting_text" >
    </LinearLayout>

</LinearLayout>