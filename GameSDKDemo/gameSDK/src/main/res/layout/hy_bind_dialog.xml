<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/HY_GameSDK_580PX"
    android:layout_height="wrap_content"
    android:background="@color/hy_white"
    android:orientation="vertical" >

    <include layout="@layout/hy_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_bindthrid_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
            android:layout_marginRight="@dimen/HY_GameSDK_36PX"
            android:layout_marginTop="@dimen/HY_GameSDK_36PX" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="绑定三方账号"
                android:textColor="@color/hy_button_text"
                android:textSize="@dimen/HY_GameSDK_26PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:background="@drawable/nav_icon_right" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_binding_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
        android:layout_marginRight="@dimen/HY_GameSDK_36PX"
        android:layout_marginTop="@dimen/HY_GameSDK_36PX"
        android:layout_marginBottom="@dimen/HY_GameSDK_36PX"
        android:paddingRight="8dip" >

        <TextView
            android:id="@+id/tv_binding_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:text="绑定手机号"
            android:textColor="@color/hy_button_text"
            android:textSize="@dimen/HY_GameSDK_26PX" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/HY_GameSDK_18PX"
            android:layout_toRightOf="@id/tv_binding_phone"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_bind_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="未绑定"
                android:textColor="@color/hy_btn_text_yellow"
                android:textSize="@dimen/HY_GameSDK_26PX" />

            <ImageView
                android:id="@+id/iv_nav_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/HY_GameSDK_10PX"
                android:background="@drawable/nav_icon_right"
                android:gravity="center_vertical"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/HY_GameSDK_28PX"
        android:layout_marginLeft="@dimen/HY_GameSDK_36PX"
        android:layout_marginRight="@dimen/HY_GameSDK_36PX"
        android:background="@color/hy_hybgColor"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/HY_GameSDK_70PX"
            android:background="@color/hy_btn_text_yellow"
            android:text="返回"
            android:textColor="@color/hy_btn_text_white"
            android:textSize="@dimen/HY_GameSDK_30PX" />
    </LinearLayout>

</LinearLayout>