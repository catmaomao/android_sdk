<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"   
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:background="@color/hy_white">  
<LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:background="@drawable/hy_gridview_item_bg"
         android:orientation="vertical">  
         <ImageView   android:id="@+id/hy_consume_benefits_gridview_item_img" 
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               android:layout_centerHorizontal="true"
               android:layout_marginRight="1px"
               android:src="@drawable/hy_consume_benaefit_present_default">   
         </ImageView>  
         <TextView   android:id="@+id/hy_consume_benefits_gridview_item_txt"
               android:layout_width="match_parent"   
               android:layout_height="@dimen/HY_GameSDK_70PX"   
               android:text="@string/hy_text_0"
               android:textColor="@color/hy_textColorforItemTitle"
               android:textSize="@dimen/HY_GameSDK_26PX"
               android:maxLines="2"
               android:maxLength="17"
               android:layout_gravity="center"
               android:gravity="center">  
         </TextView>  
</LinearLayout>  
</RelativeLayout>  